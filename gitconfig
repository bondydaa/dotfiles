    ap = add -p
    dc = diff --cached
    lg = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(yellow)%s%C(reset) %C(bold yellow)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    sl = stash list
    bg = bisect good
    bb = bisect bad
    ss = stash save
